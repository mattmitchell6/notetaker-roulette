<div class="row topspace-lg">
  <div class="col-md-12">

    <h3>Create a new team</h3>
    <hr>
    <form action="/create-team" method="post">
      <div class="form-group">
        <label>Team name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="NASA">
      </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <h3 class="mtm">Select your team</h3>
    <hr class="mbm">

    <% @teams.each do |team| %>
      <div class="card" style="margin: 10px 0">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <h5 class="card-title"><%= team.name %></h5>
              <a class="card-text" href="<%= @baseUrl + '/' + team.url  %>"><%= @baseUrl + '/' + team.url %></a>
            </div>
            <div class="col-4">
              
              <button type="button" class="btn btn-danger pull-right" data-toggle="modal" data-target=".delete-modal-<%= team.id %>">Delete</button>
            </div>
          </div>        
        </div>
      </div>

      <div class="modal fade delete-modal-<%= team.id %>" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Delete team</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>Are you sure you want to permanently delete this team?</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <a href="/delete-team/<%= team.id %>" class="btn btn-danger">Delete team</a>
            </div>
          </div>
        </div>
      </div>          
    <% end %>


    

  </div>
</div>