
<div class="row topspace-lg">
  <div class="col-md-12 text-center">

    <h1>And the winner is...</h1>

    <div class="row justify-content-center">
      <div class="card col col-md-6">
        <div class="card-body">
          <h3>
            <%= @winner[:name] %>!
            <div class="text-center">
              <img id="winnerImage" height=240px src="img/<%= @winner[:image] %>">
            </div>
          </h3>
          <button class="btn btn-primary mtm reload" data-loading="Shuffling...">Shuffle</button>
        </div>

      </div>
    </div>


  </div>
</div>

<script src="/js/helpers.js"></script>


<script type="text/javascript">

  var i = 0;
  <% if @winner[:subtitle] == "wildcard" %>
    console.log('create wildcard...')
    setInterval(function() {
      if(i % 2) {
        document.getElementById("winnerImage").src = "img/<%= @winner[:image] %>"
      } else {
        document.getElementById("winnerImage").src = "img/<%= @winner[:imageColor] %>"
      }
      i++;
    },500);
  <% end %>

</script>
