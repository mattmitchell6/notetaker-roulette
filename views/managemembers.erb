<div class="row topspace-lg">
  <div class="col-md-12">

    <h1>Manage Team members</h1>
    <p class="text-muted"><%= @team.name %></p>

    <h3 class="mtm">Add a new member</h3>
    <hr>
    <form action="/<%= @team.url %>/create-member" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Name</label>        
        <input type="text" class="form-control" id="name" name="name" placeholder="Jane Doe" required>

          <div class="form-group mts">
            <label >Photo</label>
            <input type='file' name='file' class="form-control-file" required>
          </div>        

        <input type="hidden" name="teamId" value="<%= @team.id %>">
      </div>
        <button type="submit" class="btn btn-primary mts">Submit</button>
    </form>

    <h3 class="mtm">Team members</h3>
    <hr class="mbm">

    <div class="row mbm"> 
      <% if @members && @members.length > 0 %>
        <% @members.each do |member| %>
          <div class="col-3">
            <div class="card" style="margin: 10px 0">
              <div class="card-body">
                <div class="row">
                  <div class="col-12">                    
                    <h5 class="card-title"><%= member.full_name %></h5>                            
                    <img class="card-img-top" src="<%= member.image.url %>" alt="">        
                    <div>
                      <i><%= member.first_name %></i>
                    </div>                      
                    <a href="/<%= @team.url %>/delete-member/<%= member.id %>" class="btn btn-danger mtm">Delete</a>
                  </div>
                  <div class="col-4">                    
                  </div>
                </div>        
              </div>
            </div>
          </div>
        <% end %>     
      <% else %>
        <p class="col-12">You don't have any members on your team. Add members above.</p>
      <% end %>  
    </div>
  
  </div>
</div>